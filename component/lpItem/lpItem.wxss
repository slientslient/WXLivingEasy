/* component/lpItem/lpItem.wxss */
.lpitem-container{

  position:relative;
  width:710rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid rgb(121, 121, 121);
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  
}
.lpitem-name-container{
  display:flex;
  flex-direction:row;
  justify-content: space-between;
  color:#333333;
  margin: 12rpx 14rpx 10rpx 18rpx;
  
  /* padding:16rpx 14rpx 2rpx 18rpx; */
}

.lpitem-reg-name{
  font-size: 36rpx;
  font-weight: 700;
}
.lpitem-ad-name{
  font-size: 24rpx;
  font-weight: 400;
  margin-left:12rpx;
}

.lpitem-area{
  font-size: 36rpx;
  font-weight: 400;
}
.lpitem-divide-line{
  background: #e1e1e1;
  width:100%;
  height: 2rpx;
}
.lpitem-price-container{
  display:flex;
  flex-direction:row;
  justify-content: flex-start;
  margin: 8rpx 14rpx 12rpx 18rpx;
}
.lpitem-price-title-ct{
   flex:4;
   display: flex;
   flex-direction: column;
   justify-content: flex-start;
}
.lpitem-price-title{
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
}
.lpitem-price-text{
  font-size: 20rpx;
  font-weight: 400;
  color: #333333;
  margin-left:12rpx ;
}
.lpitem-price-num-ct{
   flex:3;
   display: flex;
   flex-direction: column;
   justify-content: flex-start;
  
}
.lpitem-price-num{
  font-size: 32rpx;
  font-weight: 700;
  color: #1989FA;
}
.lpitem-dev-container{
  display:flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:baseline;
  flex-wrap:wrap;
  margin: 8rpx 14rpx 8rpx 16rpx;
  color: #333333;
}
.lpitem-dev-title{
  font-size: 26rpx;
  font-weight: 400;
}
.lpitem-dev-names{
  font-size: 26rpx;
  font-weight: 400;
  margin-left:6rpx;
}
.lpitem-devc-name{
font-size: 19rpx;
font-weight: 400;
margin-left:6rpx;
}
.lpitem-pro-ct{
  display:flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:baseline;
  flex-wrap:wrap;
  margin: 8rpx 14rpx 8rpx 16rpx;
  color: #333333;
}
.lpitem-pro-title{
  font-size: 26rpx;
  font-weight: 400;
}
.lpitem-pro-short{
  font-size: 26rpx;
  font-weight: 400;
}
.lpitem-pro-name{
  font-size: 19rpx;
  font-weight: 400;
}
.lpitem-pos-ct{
  display:flex;
  flex-direction:row;
  justify-content: flex-start;
  align-items:center;
  margin-top: 6rpx;

}
.lpitem-image{
  width: 50rpx;
  height: 50rpx;
}
.lpitem-pos-name{
  font-size: 26rpx;
  font-weight: 400;
  color: #333333;
  margin-left: 4rpx;
}
.lpitem-show{
 position:absolute;
 bottom: 2rpx;
 right:2rpx;
}
.lpitem-hide{
  position:absolute;
  bottom:0;
  right:2rpx;
  display:none;
}
.lpitem-new-reg{
  width:155rpx;
  height: 113rpx;
}
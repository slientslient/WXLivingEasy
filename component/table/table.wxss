/* components/table.wxss */
.table-fixed {
  position: relative;
  overflow: hidden;
}
.table__fixed-columns {
  position: absolute;
  left: 0;
  background-color: #fff;
  pointer-events: none; /*固定列不接受触摸，相当于滚动表格本身*/
  z-index: 100;
}
.iblank{
  margin-top: 1rpx;
  background-color:white;
  height:10rpx;
}
.blank{
  background-color:white;
  height:10rpx;
}
.table {
  width: 100%;
}

.td{
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  color: #666;
  margin:8rpx 5rpx;
  /* border-right: 1rpx solid #E6E6E6;
  border-bottom: 1rpx solid #E6E6E6; */
  font-size: 28rpx;
  line-height: 38rpx;
  height:116rpx;
}
.fixed-td{
  box-sizing: border-box;
  display: inline-flex;
  text-align: center;
  border-right: 1rpx solid #E6E6E6;
  /* border-bottom: 10rpx solid #ffffff; */
  font-size: 28rpx;
  line-height: 38rpx;
  margin: 8rpx 5rpx;
  background-color: #1989FA;
  color:#fff;
  height:116rpx;
}
.th {
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  font-weight: 700;
  color: #333333;
  border-right: 1rpx solid #333333;
  border-bottom: 1rpx solid #333333;
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 8rpx 0;
  margin:0 5rpx;
  border-top: 1rpx solid #333333;
  border-left: 1rpx solid #333333;
}
.fixed-th{
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
  font-weight: 700;
  color: #333333;
  font-size: 24rpx;
  line-height: 34rpx;
  padding: 8rpx 0;
  margin:0 5rpx;
  border: 1rpx solid #333333;
  visibility:hidden
}
